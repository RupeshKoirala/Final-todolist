<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fa fa-check-square fa-6x"></i>
    <h1 class="display-3">Todo-list!</h1>

    <table class="table" style="width:100%">
      <thead>
        <tr>
          <th scope="col" colspan="3">Please click create a list to add list</th>
      </thead>
      <thead>
        <tr>
          <th style="width:20px">No.</th>
          <th style="width:80%">Todolist</th>
          <th style="width:10%">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(i = 0;i < secrets.length; i++){ %>
        <tr>
          <th><%= i+1 %></th>
          <td><%= secrets[i] %></td>
          <td><a href="/delete?secret=<%= secrets[i] %>" class="btn btn-danger">Delete</a></td>
        </tr>
        <% } %>
      </tbody>
    </table>


    <hr>

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Create a list</a>
  </div>
</div>

<%- include('partials/footer') %>